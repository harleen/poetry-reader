{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,

    "outDir": "lib",
    "rootDir": "site/src",

    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",

    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "site/src/index.ts",
    "site/src/reader/**/*",
    "site/src/explore/**/*",
    "site/src/models/**/*"
]
}
