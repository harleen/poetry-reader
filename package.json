{
  "name": "@harleenserai/poetry-reader",
  "version": "0.5.0",
  "license": "MIT",
  "private": false,
  "type": "module",
  "main": "./lib/poetry-reader.umd.cjs",
  "module": "./lib/poetry-reader.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/poetry-reader.js",
      "require": "./lib/poetry-reader.umd.cjs"
    },
    "./style.css": "./lib/poetry-reader.css"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "clean:content": "tsx content-build/scripts/clean-generated.ts",
    "build:content": "npm run clean:content && tsx content-build/scripts/build-reading-model.ts",
    "dev": "npm run build:lib && npm run build:content && cd site && npm run dev",
    "build": "npm run build:lib && npm run build:content && cd site && npm run build",
    "build:site": "npm run build:lib && npm run build:content && cd site && npm run build",
    "build:lib:js": "vite build --config vite.lib.config.ts",
    "build:lib:types": "tsc --project tsconfig.lib.json",
    "build:lib": "npm run build:lib:js && npm run build:lib:types"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.1",
    "react-markdown": "^10.1.0"
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19",
    "react-router-dom": "^6"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.9",
    "@vitejs/plugin-react": "^5.1.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
