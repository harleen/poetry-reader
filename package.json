{
  "name": "poetry-reader",
  "private": true,
  "type": "module",
  "main": "./lib/poetry-reader.umd.cjs",
  "module": "./lib/poetry-reader.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  
  "scripts": {
   "clean:content": "node --loader ts-node/esm --input-type=module content-build/scripts/clean-generated.cts",
    "build:content": "npm run clean:content && node --loader ts-node/esm --input-type=module content-build/scripts/build-reading-model.cts",
    "dev": "npm run build:content && cd site && npm run dev",
    "build": "npm run build:content && cd site && npm run build",
    "build:site": "npm run build:content && cd site && npm run build",
    "build:lib:js": "vite build --config vite.lib.config.ts",
    "build:lib:types": "tsc --project tsconfig.lib.json",
    "build:lib": "npm run build:lib:js && npm run build:lib:types"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.1",
    "react-markdown": "^10.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.9",
    "@vitejs/plugin-react": "^5.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
